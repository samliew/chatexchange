{
    "bail": true,
    "coverageThreshold": {
        "global": {
            "branches": 60,
            "functions": 85,
            "lines": 85,
            "statements": 85
        }
    },
    "moduleFileExtensions": [
        "ts",
        "tsx",
        "js"
    ],
    "transform": {
        "\\.tsx?$": "ts-jest",
        "^.+\\.jsx?$": "babel-jest"
    },
    "globals": {
        "ts-jest": {
            "tsconfig": "./tests/tsconfig.json"
        }
    }
}
