{
  "compilerOptions": {
    "outDir": "dist/",
    "module": "commonjs",
    "target": "es2017",
    "lib": ["es6", "es7", "es2017"],
    "skipLibCheck": true,
    "moduleResolution": "node",
    "strict": true,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
