{
    "$schema": "https://json.schemastore.org/tslint.json",
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "curly": [
            true,
            "ignore-same-line"
        ],
        "variable-name": [
            true,
            "ban-keywords",
            "check-format",
            "allow-leading-underscore",
            "allow-pascal-case"
        ],
        "trailing-comma": false,
        "comment-format": false,
        "interface-name": false,
        "no-empty-interface": false
    },
    "rulesDirectory": []
}
